#:import C kivy.utils.get_color_from_hex
from kivy.utils import get_color_from_hex as C
<ColorButton@RadioButton>:
    group: 'color'
    on_release: app.canvas_widget.set_color(self.background_color)
    background_normal: 'color_button_normal.png'
    background_down: 'color_button_down.png'
    border: (3, 3, 3, 3)

<CanvasWidget>:
    Button:
        text : '[b]Delete[/b]'
        right: root.right -10
        top: root.top -20
        width: 80
        height: 40
        background_normal : 'delete_normal.png'
        background_down : 'delete_pressed.png'
        markup: True
        on_release: root.clear_canvas()
    BoxLayout:
        orientation: 'horizontal'
        padding:3
        spacing:3
        x:0
        y:0
        width:root.width
        halign:40

        ColorButton:
            background_color: C('#2980b9')
            state: 'down'
        ColorButton:
            background_color: C('#16A085')
        ColorButton:
            background_color : C('#27AE60')